{
  "description": "Advanced configuration for Katamill with KataGo-inspired optimizations",
  "version": "2.0",
  
  "training": {
    "batch_size": 64,
    "num_epochs": 150,
    "learning_rate": 0.0008,
    "weight_decay": 0.0002,
    
    "loss_weights": {
      "policy_weight": 1.0,
      "value_weight": 1.2,
      "score_weight": 0.4,
      "ownership_weight": 0.6,
      "mill_potential_weight": 0.3
    },
    
    "advanced_training": {
      "use_lr_schedule": true,
      "warmup_epochs": 3,
      "use_mixed_precision": true,
      "gradient_accumulation_steps": 2,
      "adaptive_weighting": true,
      "label_smoothing": 0.02,
      "aux_warmup_steps": 2000
    },
    
    "regularization": {
      "grad_clip_norm": 0.8,
      "use_symmetries": true,
      "dropout_rate": 0.18
    },
    
    "checkpointing": {
      "checkpoint_dir": "checkpoints/katago_style",
      "save_every_epochs": 3,
      "keep_best_models": 5
    }
  },

  "network": {
    "input_channels": 32,
    "num_filters": 192,
    "num_residual_blocks": 8,
    "policy_size": 576,
    "ownership_size": 24,
    "dropout_rate": 0.18,
    "activation": "mish",
    "use_se": true,
    "se_ratio": 0.25
  },

  "mcts": {
    "cpuct": 1.0,
    "num_simulations": 600,
    "dirichlet_alpha": 0.3,
    "dirichlet_epsilon": 0.25,
    "temperature": 1.0,
    
    "advanced_search": {
      "use_virtual_loss": true,
      "virtual_loss_count": 3,
      "progressive_widening": true,
      "min_visits_for_expansion": 2,
      "use_transpositions": true
    },
    
    "nine_mens_morris": {
      "consecutive_move_bonus": 0.08,
      "removal_phase_exploration": 1.3,
      "placing_phase_exploration": 1.15,
      "flying_phase_simulations_multiplier": 1.4
    }
  },

  "selfplay": {
    "num_games": 8000,
    "max_moves": 250,
    "mcts_sims": 600,
    "temperature": 1.0,
    "temp_decay_moves": 25,
    "cpuct": 1.0,
    "num_workers": 8,
    
    "data_quality": {
      "min_game_length": 10,
      "max_game_length": 200,
      "balance_outcomes": true,
      "filter_repetitive_games": true
    }
  },

  "evaluation": {
    "analysis_depth": 800,
    "confidence_samples": 15,
    "enable_uncertainty_estimation": true,
    "detailed_tactical_analysis": true
  },

  "performance": {
    "feature_cache_size": 15000,
    "batch_inference": true,
    "parallel_workers_per_gpu": 2,
    "memory_efficient_mode": false
  },

  "nine_mens_morris_specific": {
    "phase_aware_features": true,
    "consecutive_move_handling": true,
    "mill_pattern_detection": "advanced",
    "tactical_feature_extraction": true,
    "strategic_position_evaluation": true
  }
}
