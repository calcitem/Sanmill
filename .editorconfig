root = true

[*]
charset = utf-8
trim_trailing_whitespace = true

[*.{cpp,c,hpp,h,py}]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true

[*.{dart,js}]
indent_style = space
indent_size = 2
insert_final_newline = true

[*.{java,m,md}]
indent_style = space
end_of_line = lf
insert_final_newline = true

[*.json]
indent_style = space

[{*.sh,Makefile}]
indent_style = tab
indent_size = 4
end_of_line = lf
insert_final_newline = true
